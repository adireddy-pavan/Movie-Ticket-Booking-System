#include <stdio.h>
#include <string.h>

#define MAX_MOVIES 5
#define TICKET_PRICE 150  // Price per ticket

struct Movie {
    int id;
    char name[50];
    char time[10];
};

int main() {
    struct Movie movies[MAX_MOVIES] = {
        {1, "Avengers: Endgame", "10:00AM"},
        {2, "Inception",        "1:00PM"},
        {3, "Interstellar",     "4:00PM"},
        {4, "The Dark Knight",  "7:00PM"},
        {5, "Spider-Man: No Way Home", "9:30PM"}
    };

    int choice, tickets;
    char name[50];

    printf("=========================================\n");
    printf("       üé¨ Movie Ticket Booking System    \n");
    printf("=========================================\n");

    printf("\nEnter Your Name: ");
    fgets(name, sizeof(name), stdin);
    name[strcspn(name, "\n")] = 0; // Remove newline

    printf("\nAvailable Movies:\n");
    printf("-----------------------------------------\n");
    for (int i = 0; i < MAX_MOVIES; i++) {
        printf("%d. %s (%s)\n", movies[i].id, movies[i].name, movies[i].time);
    }
    printf("-----------------------------------------\n");

    printf("Choose a movie (1-%d): ", MAX_MOVIES);
    scanf("%d", &choice);

    if (choice < 1 || choice > MAX_MOVIES) {
        printf("\n‚ùå Invalid movie selection!\n");
        return 1;
    }

    printf("Enter number of tickets: ");
    scanf("%d", &tickets);

    if (tickets <= 0) {
        printf("\n‚ùå Invalid ticket count!\n");
        return 1;
    }

    int totalCost = tickets * TICKET_PRICE;

    printf("\n=========================================\n");
    printf("            BOOKING RECEIPT              \n");
    printf("=========================================\n");
    printf("Name       : %s\n", name);
    printf("Movie      : %s\n", movies[choice - 1].name);
    printf("Show Time  : %s\n", movies[choice - 1].time);
    printf("Tickets    : %d\n", tickets);
    printf("Price/Ticket: ‚Çπ%d\n", TICKET_PRICE);
    printf("Total Cost : ‚Çπ%d\n", totalCost);
    printf("-----------------------------------------\n");
    printf("‚úÖ Booking Successful! Enjoy the show üéâ\n");
    printf("=========================================\n");

    return 0;
}
